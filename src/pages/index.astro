---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// FETCH LATEST BLOG POST
const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const latestPost = posts[0];

// DATA: EXPERIENCE
const experience = [
  { role: "Network Security Analyst", company: "Tech Solutions Inc.", date: "2024 - Present", logo: "/company1.png", desc: "Managing gateway servers, configuring firewalls, and automating security sweeps using Python & n8n." },
  { role: "Linux System Administrator", company: "DataCorp Halifax", date: "2022 - 2024", logo: "/company2.png", desc: "Optimized server uptime, handled CPANEL troubleshooting, and wrote bash scripts for automated backups." },
];

// DATA: CERTIFICATIONS
const certifications = [
  { name: "CompTIA Security+", issuer: "CompTIA", date: "2024", logo: "https://upload.wikimedia.org/wikipedia/commons/thumb/6/61/CompTIA_Security%2B.svg/1200px-CompTIA_Security%2B.svg.png", color: "bg-red-500" },
  { name: "AWS Solutions Architect", issuer: "AWS", date: "2023", logo: "https://upload.wikimedia.org/wikipedia/commons/9/93/Amazon_Web_Services_Logo.svg", color: "bg-orange-500" },
  { name: "Cisco CCNA", issuer: "Cisco", date: "2022", logo: "https://upload.wikimedia.org/wikipedia/commons/0/08/Cisco_logo_blue_2016.svg", color: "bg-blue-500" },
  { name: "Red Hat Admin", issuer: "Red Hat", date: "2021", logo: "https://upload.wikimedia.org/wikipedia/commons/thumb/d/d8/Red_Hat_logo.svg/1200px-Red_Hat_logo.svg.png", color: "bg-red-700" }
];

const techStack = ["Python", "Linux", "Docker", "Astro", "Tailwind", "Bash", "Network Security", "Git"];
---

<Layout title="Sion Jaison | Developer">
  <nav class="fixed top-0 left-0 right-0 z-40 flex justify-center pt-6 reveal">
    <div class="bg-white/80 dark:bg-[#1c1c1c]/80 backdrop-blur-md border border-gray-200 dark:border-[#2a2a2a] px-6 py-3 rounded-full flex gap-6 items-center shadow-lg transition-colors duration-300">
      <a href="/" class="text-gray-900 dark:text-white font-bold hover:text-indigo-500 transition text-sm tracking-wide">HOME</a>
      <a href="/blog" class="text-gray-500 dark:text-gray-400 font-medium hover:text-black dark:hover:text-white transition text-sm tracking-wide">BLOG</a>
      <a href="/about" class="text-gray-500 dark:text-gray-400 font-medium hover:text-black dark:hover:text-white transition text-sm tracking-wide">ABOUT</a>
      <button id="themeToggle" class="ml-2 w-8 h-8 rounded-full bg-gray-100 dark:bg-[#333] flex items-center justify-center text-gray-600 dark:text-yellow-400 hover:scale-110 transition">
        <svg class="w-4 h-4 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
        <svg class="w-4 h-4 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path></svg>
      </button>
    </div>
  </nav>

  <main class="max-w-[1100px] mx-auto px-6 py-32">
    <div class="grid grid-cols-1 md:grid-cols-4 grid-rows-auto gap-5" id="bento-grid">
      
      <div class="spotlight-card reveal md:col-span-2 md:row-span-2 relative group overflow-hidden rounded-[2rem] border border-gray-200 dark:border-[#2a2a2a] bg-white dark:bg-[#1c1c1c]">
        <img src="/me.jpg" class="absolute inset-0 w-full h-full object-cover opacity-90 dark:opacity-80 transition duration-700 group-hover:scale-105" onerror="this.src='https://ui-avatars.com/api/?name=Sion+Jaison&background=random&size=512'"/>
        <div class="absolute bottom-0 left-0 p-8 bg-gradient-to-t from-white/90 dark:from-black/90 to-transparent w-full">
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white">Sion Jaison</h1>
            <p class="text-gray-600 dark:text-gray-300 mt-2 font-mono text-sm">Full Stack Developer</p>
        </div>
      </div>
      
      <div class="spotlight-card reveal md:col-span-1 bg-white dark:bg-[#1c1c1c] border border-gray-200 dark:border-[#2a2a2a] rounded-[2rem] relative overflow-hidden group min-h-[200px]">
        <div class="absolute inset-0 opacity-50 dark:grayscale dark:invert dark:contrast-125">
             <iframe width="100%" height="100%" frameborder="0" scrolling="no" src="https://maps.google.com/maps?q=Halifax,+Nova+Scotia&t=&z=13&ie=UTF8&iwloc=&output=embed" class="w-full h-full opacity-60 dark:opacity-100" style="filter: grayscale(1);"></iframe>
        </div>
        <div class="absolute bottom-6 left-6 z-10">
            <div class="flex items-center gap-2 mb-1"><span class="text-xs font-bold text-green-600 dark:text-green-400 uppercase tracking-wider">Halifax, NS</span></div>
            <h3 class="text-gray-900 dark:text-white font-bold text-2xl font-mono" id="halifax-clock">--:-- AM</h3>
        </div>
      </div>

      <div class="spotlight-card reveal md:col-span-1 bg-white dark:bg-[#1c1c1c] border border-gray-200 dark:border-[#2a2a2a] rounded-[2rem] p-6 flex flex-col justify-center gap-4">
         <a href="https://github.com/sion-jaison" class="flex items-center gap-3 text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white transition group/icon"><div class="w-8 h-8 bg-gray-100 dark:bg-[#2a2a2a] rounded-full flex items-center justify-center transition">Github</div><span class="font-bold text-sm">GitHub</span></a>
         <a href="https://linkedin.com/in/sion-jaison-226a091a2" class="flex items-center gap-3 text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white transition group/icon"><div class="w-8 h-8 bg-gray-100 dark:bg-[#2a2a2a] rounded-full flex items-center justify-center transition">In</div><span class="font-bold text-sm">LinkedIn</span></a>
      </div>

      <div class="spotlight-card reveal md:col-span-2 bg-white dark:bg-[#1c1c1c] border border-gray-200 dark:border-[#2a2a2a] rounded-[2rem] p-8 flex flex-col justify-center gap-4">
        <h3 class="text-gray-500 dark:text-gray-400 font-bold text-xs uppercase tracking-widest mb-2">My Stack</h3>
        <div class="flex flex-wrap gap-2">{techStack.map((tech) => <span class="px-3 py-1 rounded-full bg-gray-100 dark:bg-[#2a2a2a] border border-gray-200 dark:border-[#333] text-gray-700 dark:text-gray-300 text-sm font-medium">{tech}</span>)}</div>
      </div>

      <a href="/about" class="spotlight-card reveal md:col-span-2 bg-white dark:bg-[#1c1c1c] border border-gray-200 dark:border-[#2a2a2a] rounded-[2rem] p-8 flex flex-col justify-between hover:border-gray-300 dark:hover:border-slate-600 transition duration-300 group">
        <div><h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-indigo-500 transition">About Me</h2><p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-6">Specialize in automation scripts and security workflows.</p></div>
        <div class="flex items-center gap-2 text-indigo-500 font-bold">View Portfolio & Hobbies <span>â†’</span></div>
      </a>

      <div class="spotlight-card reveal md:col-span-4 bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-[#1e1e24] dark:to-[#252525] border border-indigo-100 dark:border-[#2a2a2a] rounded-[2rem] p-8 md:p-10">
        <div class="flex flex-col md:flex-row gap-6 items-start md:items-center">
            <div class="w-12 h-12 bg-indigo-500 rounded-xl flex items-center justify-center text-white text-2xl shadow-lg">âš¡</div>
            <div>
                <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Professional Summary</h2>
                <p class="text-gray-600 dark:text-gray-300 leading-relaxed max-w-4xl">Results-driven <strong>Network Security Analyst</strong> and <strong>Linux Administrator</strong> with experience hardening gateway servers and automating infrastructure.</p>
            </div>
        </div>
      </div>

      <div class="spotlight-card reveal md:col-span-4 bg-white dark:bg-[#1c1c1c] border border-gray-200 dark:border-[#2a2a2a] rounded-[2rem] p-8 md:p-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 flex items-center gap-3">ðŸ’¼ Experience</h2>
        <div class="space-y-8">{experience.map((job) => <div class="flex flex-col md:flex-row gap-6 relative group"><div class="flex-grow"><div><h3 class="text-gray-900 dark:text-white font-bold text-lg">{job.role}</h3><p class="text-indigo-600 dark:text-indigo-400 text-sm font-medium">{job.company}</p></div><p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed max-w-2xl">{job.desc}</p></div></div>)}</div>
      </div>

      <div class="spotlight-card reveal md:col-span-4 bg-white dark:bg-[#1c1c1c] border border-gray-200 dark:border-[#2a2a2a] rounded-[2rem] p-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">ðŸ“œ Certifications</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4">{certifications.map((cert) => <div class="bg-gray-50 dark:bg-[#252525] border border-gray-100 dark:border-[#333] p-4 rounded-2xl flex items-center gap-4"><img src={cert.logo} class="w-8 h-8 object-contain" /><div><h4 class="text-gray-900 dark:text-white font-bold text-sm leading-tight">{cert.name}</h4><p class="text-gray-500 text-xs mt-1">{cert.issuer}</p></div></div>)}</div>
      </div>

      <a href="/blog" class="spotlight-card reveal md:col-span-4 bg-gradient-to-br from-indigo-900 to-indigo-950 dark:to-[#1c1c1c] border border-indigo-800 dark:border-[#2a2a2a] rounded-[2rem] p-6 flex flex-col justify-center items-center text-center hover:scale-[1.01] transition duration-300 group">
        <span class="text-indigo-200 dark:text-indigo-300 font-mono text-xs mb-2">Latest from Blog</span>
        <h3 class="text-xl font-bold text-white mb-1 group-hover:underline decoration-indigo-400 underline-offset-4">
            {latestPost ? latestPost.data.title : "Read My Thoughts & Updates"}
        </h3>
        <p class="text-indigo-200/60 text-sm max-w-md mt-2">
            {latestPost ? new Date(latestPost.data.pubDate).toLocaleDateString() : "Check back for updates on security and automation."}
        </p>
      </a>

      <div class="spotlight-card reveal md:col-span-4 bg-white dark:bg-[#1c1c1c] border border-gray-200 dark:border-[#2a2a2a] rounded-[2rem] p-8 md:p-12 text-center">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Let's Work Together</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-8">Have a project in mind or want to discuss security?</p>
        <form name="contact" method="POST" data-netlify="true" class="max-w-md mx-auto space-y-4">
            <input type="text" name="name" placeholder="Your Name" class="w-full p-4 rounded-xl bg-gray-50 dark:bg-[#252525] border border-gray-200 dark:border-[#333] focus:border-indigo-500 focus:outline-none dark:text-white"/>
            <input type="email" name="email" placeholder="Your Email" class="w-full p-4 rounded-xl bg-gray-50 dark:bg-[#252525] border border-gray-200 dark:border-[#333] focus:border-indigo-500 focus:outline-none dark:text-white"/>
            <textarea name="message" placeholder="Message" rows="3" class="w-full p-4 rounded-xl bg-gray-50 dark:bg-[#252525] border border-gray-200 dark:border-[#333] focus:border-indigo-500 focus:outline-none dark:text-white"></textarea>
            <button type="submit" class="bg-indigo-600 text-white px-8 py-3 rounded-xl font-bold hover:bg-indigo-500 transition w-full">Send Message</button>
        </form>
      </div>

    </div>
  </main>
  
  <script is:inline>
    // Theme Logic & Spotlight Logic (Same as before)
    const handleToggleClick = () => { const el = document.documentElement; el.classList.toggle("dark"); localStorage.setItem("theme", el.classList.contains("dark") ? "dark" : "light"); }
    document.getElementById("themeToggle").addEventListener("click", handleToggleClick);
    
    // Clock
    setInterval(() => { const c = document.getElementById('halifax-clock'); if(c) c.textContent = new Intl.DateTimeFormat('en-US', { timeZone: 'America/Halifax', hour: 'numeric', minute: '2-digit', hour12: true }).format(new Date()); }, 1000);

    // Spotlight
    const cards = document.querySelectorAll('.spotlight-card');
    document.addEventListener('mousemove', (e) => {
      for (const card of cards) {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        card.style.setProperty('--mouse-x', `${x}px`);
        card.style.setProperty('--mouse-y', `${y}px`);
      }
    });
  </script>
</Layout>
