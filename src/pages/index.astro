---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro'; 

// If you don't have a Layout file yet, you can remove the <Layout> wrapper
// and just use standard HTML (<html><body>...</body></html>)

// Data for your portfolio (easier to manage here than in the HTML)
const skills = ["Cybersecurity", "Python", "Linux Admin", "Network Security", "Astro", "Docker"];
const projects = [
  {
    title: "Gateway Server Tool",
    description: "A custom troubleshooting tool for gateway servers using Python and Perl.",
    tags: ["Python", "CGI", "Linux"],
    link: "#"
  },
  {
    title: "VulnMonitor Automation",
    description: "Automated workflow to monitor software vulnerabilities using n8n.",
    tags: ["Automation", "Security", "n8n"],
    link: "#"
  },
  {
    title: "Winterfell Branding",
    description: "AI-generated branding and logo design for a creative agency.",
    tags: ["Design", "AI", "Branding"],
    link: "#"
  }
];
---

<Layout title="Jaison | Portfolio">
  <main class="bg-slate-900 min-h-screen text-slate-200 font-sans selection:bg-cyan-500 selection:text-white">
    
    <section class="max-w-5xl mx-auto px-6 pt-32 pb-20">
      <p class="text-cyan-400 font-mono mb-4 tracking-wide">Hi, my name is</p>
      <h1 class="text-6xl md:text-7xl font-bold text-white mb-6 tracking-tight">
        Jaison.
      </h1>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-400 mb-8">
        I build secure networks & automation tools.
      </h2>
      <p class="max-w-xl text-lg text-slate-400 mb-10 leading-relaxed">
        I'm a cybersecurity enthusiast and developer specializing in server administration, 
        custom troubleshooting scripts, and automated workflows.
      </p>
      <a href="#contact" class="inline-block border border-cyan-400 text-cyan-400 py-3 px-8 rounded hover:bg-cyan-400/10 transition-colors duration-300 font-mono">
        Get In Touch
      </a>
    </section>

    <section class="max-w-5xl mx-auto px-6 py-20">
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center">
        <span class="text-cyan-400 mr-2">01.</span> Technical Skills
      </h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {skills.map((skill) => (
          <div class="bg-slate-800 p-4 rounded border border-slate-700 hover:border-cyan-400 transition-colors text-center">
            <span class="font-mono text-sm text-cyan-300">{skill}</span>
          </div>
        ))}
      </div>
    </section>

    <section class="max-w-5xl mx-auto px-6 py-20">
      <h3 class="text-2xl font-bold text-white mb-12 flex items-center">
        <span class="text-cyan-400 mr-2">02.</span> Some Things I've Built
      </h3>
      
      <div class="grid md:grid-cols-2 gap-8">
        {projects.map((project) => (
          <div class="group bg-slate-800 p-8 rounded-lg border border-slate-700 hover:-translate-y-2 transition-transform duration-300">
            <h4 class="text-xl font-bold text-white mb-3 group-hover:text-cyan-400 transition-colors">
              {project.title}
            </h4>
            <p class="text-slate-400 mb-6 text-sm leading-relaxed">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <span class="text-xs font-mono text-cyan-300 bg-cyan-900/30 px-2 py-1 rounded">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <section id="contact" class="max-w-2xl mx-auto px-6 py-32 text-center">
      <h3 class="text-cyan-400 font-mono mb-4">03. What's Next?</h3>
      <h2 class="text-4xl font-bold text-white mb-6">Get In Touch</h2>
      <p class="text-slate-400 text-lg mb-10">
        I'm currently looking for new opportunities in Network Security and Automation. 
        Whether you have a question or just want to say hi, my inbox is open!
      </p>
      <a href="mailto:sionjaison@gmail.com" class="bg-cyan-600 text-white py-4 px-10 rounded font-bold hover:bg-cyan-500 transition-colors">
        Say Hello
      </a>
    </section>

  </main>
</Layout>
