---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// FETCH DATA FROM CMS
const tracks = (await getCollection('music')).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const photos = (await getCollection('photos')).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const videos = (await getCollection('videos')).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="About Sion | Creative Portfolio">
  
  <nav class="fixed top-0 left-0 right-0 z-40 flex justify-center pt-6 reveal">
    <div class="bg-white/80 dark:bg-[#1c1c1c]/80 backdrop-blur-md border border-gray-200 dark:border-[#2a2a2a] px-6 py-3 rounded-full flex gap-6 items-center shadow-lg transition-colors duration-300">
      <a href="/" class="text-gray-500 dark:text-gray-400 font-medium hover:text-black dark:hover:text-white transition text-sm tracking-wide">HOME</a>
      <a href="/blog" class="text-gray-500 dark:text-gray-400 font-medium hover:text-black dark:hover:text-white transition text-sm tracking-wide">BLOG</a>
      <a href="/about" class="text-gray-900 dark:text-white font-bold hover:text-indigo-500 transition text-sm tracking-wide">ABOUT</a>
      
      <button id="themeToggle" class="ml-2 w-8 h-8 rounded-full bg-gray-100 dark:bg-[#333] flex items-center justify-center text-gray-600 dark:text-yellow-400 hover:scale-110 transition">
        <svg class="w-4 h-4 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
        <svg class="w-4 h-4 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path></svg>
      </button>
    </div>
  </nav>

  <main class="max-w-[1100px] mx-auto px-6 py-32">
    
    <div class="grid md:grid-cols-2 gap-12 items-center mb-24 reveal">
        <div>
            <span class="text-indigo-500 font-mono text-sm tracking-wider uppercase mb-2 block">The Person Behind the Code</span>
            <h1 class="text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">Creativity meets <br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 to-purple-500">Logic.</span></h1>
            <p class="text-gray-600 dark:text-gray-400 text-lg leading-relaxed mb-8">Beyond server administration, I am a creator. This is where I showcase my music, edits, and photography.</p>
            <div class="flex gap-4">
                <a href="https://instagram.com/your_music_page" target="_blank" class="flex items-center gap-2 bg-gradient-to-r from-pink-500 to-purple-600 text-white px-6 py-3 rounded-full font-bold hover:scale-105 transition shadow-lg shadow-purple-500/20">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                    IG: @sion.beats
                </a>
            </div>
        </div>
        <div class="relative group">
            <div class="absolute -inset-1 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-[2rem] blur opacity-25 group-hover:opacity-50 transition duration-1000"></div>
            <img src="/me.jpg" class="relative rounded-[2rem] w-full shadow-2xl rotate-2 hover:rotate-0 transition duration-500" alt="Sion Jaison"/>
        </div>
    </div>

    <hr class="border-gray-200 dark:border-[#2a2a2a] mb-24" />

    <div class="mb-24 reveal">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 flex items-center gap-3"><span class="text-purple-500">ðŸŽ§</span> Music Production</h2>
        
        {tracks.length === 0 ? (
           <p class="text-gray-500 italic">No tracks uploaded yet. Check back soon!</p>
        ) : (
            <div class="bg-white dark:bg-[#1c1c1c] border border-gray-200 dark:border-[#2a2a2a] rounded-[2rem] p-8 space-y-4">
                {tracks.map((track) => (
                    <div class="group flex items-center justify-between p-4 rounded-xl hover:bg-gray-50 dark:hover:bg-[#252525] transition cursor-pointer border border-transparent hover:border-purple-500/30">
                        <div class="flex items-center gap-4">
                            <a href={track.data.audio} target="_blank" class="w-10 h-10 rounded-full bg-purple-500/10 flex items-center justify-center text-purple-500 group-hover:bg-purple-500 group-hover:text-white transition">â–¶</a>
                            <div><h3 class="font-bold text-gray-900 dark:text-white">{track.data.title}</h3></div>
                        </div>
                        <span class="text-sm font-mono text-gray-500">{track.data.duration}</span>
                    </div>
                ))}
            </div>
        )}
    </div>

    <div class="mb-24 reveal">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 flex items-center gap-3"><span class="text-red-500">ðŸŽ¬</span> Video Edits</h2>
        {videos.length === 0 ? (
             <p class="text-gray-500 italic">No videos uploaded yet.</p>
        ) : (
            <div class="grid md:grid-cols-2 gap-6">
                {videos.map((video) => (
                    <a href={video.data.link} target="_blank" class="group relative aspect-video bg-black rounded-2xl overflow-hidden border border-gray-800 cursor-pointer block">
                        <img src={video.data.thumbnail} class="w-full h-full object-cover opacity-60 group-hover:opacity-100 transition" />
                        <div class="absolute inset-0 flex items-center justify-center"><div class="w-12 h-12 bg-white/20 backdrop-blur rounded-full flex items-center justify-center text-white">â–¶</div></div>
                        <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/90 to-transparent"><h3 class="text-white font-bold">{video.data.title}</h3></div>
                    </a>
                ))}
            </div>
        )}
    </div>

    <div class="reveal">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-3 mb-8"><span class="text-yellow-500">ðŸ“¸</span> Photography</h2>
        {photos.length === 0 ? (
             <p class="text-gray-500 italic">No photos uploaded yet.</p>
        ) : (
            <div class="columns-1 md:columns-3 gap-4 space-y-4">
                {photos.map((photo) => (
                    <div class="break-inside-avoid relative group rounded-2xl overflow-hidden">
                        <img src={photo.data.image} class="w-full bg-gray-800 hover:scale-105 transition duration-700" />
                        <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition duration-300 flex items-center justify-center">
                            <span class="text-white font-mono text-sm">{photo.data.camera || "Photography"}</span>
                        </div>
                    </div>
                ))}
            </div>
        )}
    </div>

  </main>
  
  <script is:inline>
    // Theme Logic for About Page
    const handleToggleClick = () => {
      const element = document.documentElement;
      element.classList.toggle("dark");
      localStorage.setItem("theme", element.classList.contains("dark") ? "dark" : "light");
    }
    document.getElementById("themeToggle").addEventListener("click", handleToggleClick);
  </script>
</Layout>
